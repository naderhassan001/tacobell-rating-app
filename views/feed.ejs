<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TacoBell Feed</title>
    <script src="https://kit.fontawesome.com/1b23973fb1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="feed.css" />
  </head>
  <body id="bootstrap-overide">

    <div class="page-header text-center">
      <h1 class="links">Feed</h1>
      <a class="links" href="/profile">Profile</a>
      <a class="links" href="/logout">Logout</a>
    </div>

    <div class="container ">
      <ul class="allPosts">
        <% for(let i = 0; i < messages.length; i++) {%>
        <div class="card images">
            <p class="price">$<%= messages[i].price %></p> 
           

              <li>
                
                  <i class="info fas fa-info-circle"></i>
                  <p class="text"><%= messages[i].caption %></p>
                  <div class="imgBx">
                    <a href="/post/<%= messages[i]._id %>">
                    <img src = "<%= messages[i].img %>">
                    </a>
                  </div>
                  <div class="contentBx  ">
                    <div class="size">
                     <span><%= messages[i].likes %></span>
                    <span><i data-post="<%= messages[i]._id %>" class="fas fa-heart"></i></span>
                  
                    </div>
                  </div>
              </li>
           
          </div>
        <%} %>
      </ul>
    </div>

  <script src="main.js"></script>
  </body>
</html>

